public class ContaBancaria{

private String numeroConta;
private String titular;
private double saldo;

public ContaBancaria(String numeroConta,String titular)
    setNumeroConta(numeroConta);
    setTitular(titular);
    this.saldo=0.0;
    
}

    // Getters
    public String getNumeroConta() {
        return numeroConta;
    }

    public String getTitular() {
        return titular;
    }

    public double getSaldo() {
        return saldo;
    }

    // Setters com validação
    public void setNumeroConta(String numeroConta) {
        if (numeroConta != null && !numeroConta.trim().isEmpty()) {
            this.numeroConta = numeroConta;
        } else {
            System.out.println("Erro: Número da conta não pode ser nulo ou vazio.");
        }
    }

    public void setTitular(String titular) {
        if (titular != null && !titular.trim().isEmpty()) {
            this.titular = titular;
        } else {
            System.out.println("Erro: Titular não pode ser nulo ou vazio.");
        }
        
        
        public void depositar(double valor) {
        if (valor > 0) {
            saldo += valor;
            System.out.println("Depósito de R$" + valor + " realizado com sucesso. Saldo atual: R$" + saldo);
        } else {
            System.out.println("Erro: O valor do depósito deve ser positivo.");
        }
    }

    public void sacar(double valor) {
        if (valor > 0) {
            if (valor <= saldo) {
                saldo -= valor;
                System.out.println("Saque de R$" + valor + " realizado com sucesso. Saldo atual: R$" + saldo);
            } else {
                System.out.println("Erro: Saldo insuficiente para saque.");
            }
        } else {
            System.out.println("Erro: O valor do saque deve ser positivo.");
        }
    }
    
